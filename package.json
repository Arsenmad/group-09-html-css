{
  "name": "group-09-html-css",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "browser-sync src -w --no-notify",
    "sass": "node-sass ./src/sass/index.scss ./src/css/styles.css",
    "sass:watch": "node-sass ./src/sass/index.scss ./src/css/styles.css -w",
    "dev": "npm run sass && npm run sass:watch & npm run server",
    "lint": "stylelint src/css/*.css",
    "css": "postcss src/css/*.css --use autoprefixer --use cssnano -d build/css",
    "clean": "rimraf build && mkdir build",
    "html": "html-minifier --input-dir src --output-dir build --collapse-whitespace --file-ext html",
    "images": "imagemin src/img/* -o=build/img",
    "build": "npm run clean && npm run images && npm run sass && npm run css && npm run html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axZerk/group-09-html-css.git"
  },
  "keywords": [],
  "author": "Alexander Repeta <alexander.repeta@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/axZerk/group-09-html-css/issues"
  },
  "homepage": "https://github.com/axZerk/group-09-html-css#readme",
  "dependencies": {
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.24.7",
    "cssnano": "^4.1.4",
    "html-minifier": "^3.5.20",
    "imagemin-cli": "^3.0.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "node-sass": "^4.9.3",
    "stylelint-config-sass-guidelines": "^5.2.0",
    "stylelint-scss": "^3.3.1"
  }
}
